---
const { title, badge, large } = Astro.props;


---
<div class={`card ${large ? "large" : ""}`}>

  <div class="badge">{badge}</div>

  <div class="title">{title}</div>

</div>


<style>
.card {
background: linear-gradient(#e6e6e6, #8d8c8c);

  padding: 20px;
  border-radius: 10px;
  height: 200px;
  text-decoration: none;
  color: black;
      position: relative;

}

  .large {
    height: 300px;
    grid-column: span 2;
  }

  .badge {
    background: #c85d1a;
    color: white;
    font-size: 12px;
    font-weight: 700;
    padding: 6px 8px;
    border-radius: 6px;
    display: inline-block;
  }

  .title {
    position: absolute;
    left: 12px;
    right: 12px;
    bottom: 12px;
    color: white;
    padding: 10px;
    border-radius: 8px;
    font-weight: 800;
    font-size: 14px;
    line-height: 1.2;
  }
</style>