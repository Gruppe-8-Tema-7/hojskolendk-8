---
const { title, variant, href } = Astro.props;
---

{href ? (
  <a href={href} class={variant}>
    {title}
  </a>
) : (
  <button class={variant}>
    {title}
  </button>
)}

<style>
  button, a {
    padding: 1rem;
    border: none;
    border-radius: 5px;
    font-family: "poppins", "helvetica neue", sans-serif;
    font-weight: 700;
    font-size: 1rem;
    cursor: pointer;
    text-decoration: none;
  }

  .primary {
    background-color: #ce5501;
    color: white; 
    transition: all 0.3s ease;
  }

  .secondary {
    background-color: white;
    color: black;
    transition: all 0.3s ease;
  }

  .tertiary {
    background-color: black;
    color: white;
    transition: all 0.3s ease;
  }

  .primary:hover{
    background-color: #EBBB99;
    color: black;
  }
    .secondary:hover{
    background-color: black;
    color: white;
  }
    .tertiary:hover{
    background-color: white;
    color: black;
  }
</style>
