---
const {title, variant} = Astro.props;
---

<button class={variant}>{title}</button>

<style>
button{
    padding: 1rem;
    border: none;
    border-radius: 5px;
}

.primary{
    background-color: #ce5501;
    color: white;
}

.secondary{
    background-color: white;
    color: black;
}

.tertiary{
    background-color: sort;
    color: white;
}
</style>